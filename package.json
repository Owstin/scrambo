{
  "name": "scrambow",
  "version": "1.0.3",
  "description": "Javascript Rubik's Cube Scramble Generator ",
  "repository": {
    "type": "git",
    "url": "git://github.com/Owstin/scrambo.git"
  },
  "keywords": [
    "scramble",
    "scrambow",
    "cube",
    "rubik",
    "jsss"
  ],
  "author": "Austin Moore <owstingreen@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Owstin/scrambo/issues"
  },
  "main": "./dist/scrambow.js",
  "bin": {
    "scrambow": "./dist/cli.js"
  },
  "scripts": {
    "test": "mocha -r ts-node/register test/*.ts",
    "build": "webpack",
    "postbuild": "node scripts/addSheBang.js dist/cli.js",
    "cover": "nyc mocha -r ts-node/register test/*.ts",
    "prepare": "npm run build"
  },
  "dependencies": {
    "commander": "^2.19.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.0",
    "chai": "^4.2.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2",
    "ts-loader": "^5.2.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3",
    "uglify-js": "^2.4.13",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
